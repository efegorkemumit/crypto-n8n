generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CryptoTick{
    id        String   @id @default(cuid())
    symbol    String // e.g. BTCUSDT
    price     Decimal  @db.Decimal(18, 8)
    fetchedAt DateTime // gerçek veri zamanı
    source    String //

    @@unique([symbol, fetchedAt]) // idempotency için dakika-dakika eklerken
    @@index([symbol, fetchedAt])

}
